@model DungeonMaster.ViewModels.RegisterViewModel

@{
    ViewBag.Title = "Register";
}

@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}

<div class="row">
    <div class="col-md-3">
        <h3> Register </h3>
        <form method="post" novalidate>
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label asp-for="Username">Username</label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-muted"></span>
            </div>
            
            
            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" class="form-control"/>
                <span asp-validation-for="Email" class="text-muted"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password">Parola</label>
                <input asp-for="Password" type="password" class="form-control"/>
                <span asp-validation-for="Password" class="text-muted"></span>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmPassword">Verifica Parola</label>
                <input asp-for="ConfirmPassword" type="password" class="form-control"/>
                <span asp-validation-for="ConfirmPassword" class="text-muted"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Register" class="btn btn-success"/>
            </div>

        </form>
    </div>
</div>